//struct with variable
#include<stdio.h>
int main()
{
    struct student
    {
    int roll_no;
    char name[10];
    float mark;
    };
    struct student detail={1,"Selvi",29.34};
    printf("%d ",detail.roll_no);
    printf("%s ",detail.name);
    printf("%f",detail.mark);
    return 0;
}
//struct with pointer

#include<stdio.h>
int main()
{
    struct student
    {
    int roll_no;
    char name[10];
    float mark;
    };
    struct student *detail,S1;
        detail=&S1;
    scanf("%d",&detail->roll_no);
    scanf("%s",&detail->name);
    scanf("%f",&detail->mark);
    printf("%d ",detail->roll_no);
    printf("%s ",detail->name);
    printf("%f",detail->mark);
return 0;
}*
