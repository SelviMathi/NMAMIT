#include <stdio.h>

struct student {
    int roll_no;
    char name[10];
    float mark;
};

void display(struct student s);
void get_detail(struct student *s);

int main() {
    struct student S1;
    int num;

    printf("Enter number of students: ");
    scanf("%d", &num);

    for (int i = 0; i < num; i++) 
        get_detail(&S1);
    for (int i = 0; i < num; i++)
        display(S1);
        return 0;
}

void get_detail(struct student *s) {
    printf("Enter roll number: ");
    scanf("%d", &s->roll_no);
    printf("Enter name: ");
    scanf("%s", s->name);
    printf("Enter mark: ");
    scanf("%f", &s->mark);
}

void display(struct student s) {
    printf("Roll Number: %d\n", s.roll_no);
    printf("Name: %s\n", s.name);
    printf("Mark: %.2f\n", s.mark);
}
